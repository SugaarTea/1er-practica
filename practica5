function esCuadradoConsecutivo(arr) {
    // Verificar si el arreglo contiene números consecutivos desde 1 hasta n^2
    const n = arr.length;
    const total = n * n;
    const numeros = new Set(arr.flat());
    if (numeros.size !== total) {
        return false;
    }
    for (let i = 1; i <= total; i++) {
        if (!numeros.has(i)) {
            return false;
        }
    }
    return true;
}

function esCuadradoMagico(arr) {
    // Verificar si el arreglo es un cuadrado mágico
    const n = arr.length;
    const sumaEsperada = n * (n * n + 1) / 2;
    let sumaDiagonal1 = 0;
    let sumaDiagonal2 = 0;
    for (let i = 0; i < n; i++) {
        let sumaFila = 0;
        let sumaColumna = 0;
        for (let j = 0; j < n; j++) {
            sumaFila += arr[i][j];
            sumaColumna += arr[j][i];
            if (i === j) {
                sumaDiagonal1 += arr[i][j];
            }
            if (i + j === n - 1) {
                sumaDiagonal2 += arr[i][j];
            }
        }
        if (sumaFila !== sumaEsperada || sumaColumna !== sumaEsperada) {
            return false;
        }
    }
    return sumaDiagonal1 === sumaEsperada && sumaDiagonal2 === sumaEsperada;
}

// Leer el arreglo y calcular si es consecutivo y si es un cuadrado mágico
const n = prompt("Inserta el tamaño n del arreglo cuadrado:");
const arreglo = [];
for (let i = 0; i < n; i++) {
    const fila = prompt(`Inserta los ${n} números para la fila ${i + 1} separados por comas:`).split(",").map(Number);
    arreglo.push(fila);
}

const consecutivo = esCuadradoConsecutivo(arreglo);
const magico = esCuadradoMagico(arreglo);

console.log(`El arreglo ${consecutivo ? 'sí' : 'no'} tiene números consecutivos desde 1 hasta n^2`);
console.log(`El arreglo ${magico ? 'es' : 'no es'} un cuadrado mágico`);
